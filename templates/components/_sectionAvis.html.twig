		{% endfor %}
	</div>

	<div class="readAvis reveal fade-bottom">
		<h4 class="titleReadAvis">
			Déposer le vôtre ici<span class="point">.</span>
		</h4>

		{{ form_start(form, {'attr': {'class': 'form-avis', 'id': 'form-avis'}}) }}

		{{ form_row(form.nom, {'label': false, 'attr': { 'class': 'input-avis', 'placeholder': 'Nom'}}) }}
		{{ form_row(form.prenom, {'label': false, 'attr': {'class': 'input-avis', 'placeholder': 'Prénom'}}) }}
		{{ form_row(form.commentaire, {'label': false, 'attr': {'class': 'input-message', 'placeholder': 'L’endroit parfait pour, raparer, entretenir ou acheter son occasion..*'}}) }}
		{{ form_row(form.valide, {'label': false}) }}

		<div class="form-group">
			<button type="submit" class="btn btn-avis">Soumettre</button>
		</div>

		{{ form_end(form) }}
	</div>
</div>
