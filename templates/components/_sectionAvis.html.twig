			{% set offset = 1 %}
			{% set animationClasses = ['fade-bottomOne', 'fade-bottomTwo', 'fade-bottomThree', 'fade-bottomFour'] %}
			{% set animationClass = cycle(animationClasses, avi.id - offset) %}

			{% set imagePath = '' %}
			{% if avi.id == 6 %}
				{% set imagePath = 'css/assets/homme1.jpeg' %}
			{% elseif avi.id == 7 %}
				{% set imagePath = 'css/assets/femme.jpeg' %}
			{% elseif avi.id == 8 %}
				{% set imagePath = 'css/assets/homme2.jpeg' %}
			{% elseif avi.id == 9 %}
				{% set imagePath = 'css/assets/homme2.jpeg' %}
			{% endif %}

			<div class="cardAvis reveal {{ animationClass}}">
				<img src="{{ asset(imagePath) }}" alt="Image pour avi {{ avi.id }}">
				<h4 class="nom">{{avi.prenom}}<span class="point">.</span>
